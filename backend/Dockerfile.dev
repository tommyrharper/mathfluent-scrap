FROM python:3.10-slim

ENV UV_LINK_MODE=copy

# Install UV
RUN pip install uv

# Copy project files
COPY pyproject.toml .
COPY README.md .
COPY uv.lock .
COPY app ./app

# Install dependencies with UV
RUN uv sync
ENV PATH=/.venv/bin:$PATH

# Copy the rest of the application
COPY . .

WORKDIR /app

# Run the application
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"] 